<section class="my-bio bg-secondary bg-gradient">
  <div class="container">
    <div class="row">
      <%= render partial: 'user', locals: { user: @user } %>
    </div>
    <div class="card my-4">
      <%= render partial: 'bio', locals: { user: @user } %>
    </div>
    <% if @posts.any? %>
      <div class="post-list">
        <% @user.recentposts.each do |post| %>
          <%= render partial: 'post', locals: { user: @user, post: post } %>
        <% end %>
        <%= link_to "See all posts", user_posts_path(@user), class: "btn btn-primary" %>
      </div>
    <% else %>
      <h2><%= @user.name %> has no posts</h2>
    <% end %>
    <div class="text-center">
      <a href="/users/1/posts">
        <button class="btn btn-success" type="button">Show All Posts</button>
      </a>
    </div>
  </div>
</section>
